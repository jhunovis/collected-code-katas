                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="6"
                                GridPane.rowIndex="3"/>
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="7"
                                GridPane.rowIndex="3"/>
                        <Circle styleClass="redLight, off" radius="27.0" GridPane.columnIndex="8"
                                GridPane.rowIndex="3"/>
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="9"
                                GridPane.rowIndex="3"/>
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="10"
                                GridPane.rowIndex="3"/>
                        <!-- minutes 2 -->
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="2"
                                GridPane.rowIndex="4"/>
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="4"
