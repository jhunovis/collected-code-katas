                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>

                    <children>
                        <!-- normal time as text -->
                        <Label text="Label" GridPane.rowIndex="0" GridPane.columnIndex="7" GridPane.columnSpan="3" fx:id="label"/>
                        <!-- Seconds -->
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="5"
                                GridPane.rowIndex="0"/>
                        <!-- hours 1-->
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="2"
                                GridPane.rowIndex="1"/>
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="4"
                                GridPane.rowIndex="1"/>
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="6"
                                GridPane.rowIndex="1"/>
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="8"
                                GridPane.rowIndex="1"/>
                        <!-- hours 2 -->
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="2"
                                GridPane.rowIndex="2"/>
                        <Circle styleClass="yellowLight, off" radius="27.0" GridPane.columnIndex="4"
                                GridPane.rowIndex="2"/>
